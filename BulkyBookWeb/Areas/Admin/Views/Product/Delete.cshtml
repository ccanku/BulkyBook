@model Product

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="form-floating py-2 col-12">
            <input asp-for="Title" class="form-control border-0 shadow" readonly="true" />
            <label asp-for="Title" class="ms-2 " e></label>
            <span asp-validation-for="Title" disabled class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Description" class="form-control" readonly="true" />
            <label asp-for="Description" class="ms-2"></label>
            <span asp-validation-for="Description" disabled class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="ISBN" class="form-control" readonly="true" />
            <label asp-for="ISBN" class="ms-2"></label>
            <span asp-validation-for="ISBN" disabled class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Author" class="form-control" readonly="true" />
            <label asp-for="Author" class="ms-2"></label>
            <span asp-validation-for="Author" disabled class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="ListPrice" class="form-control" readonly="true" />
            <label asp-for="ListPrice" class="ms-2"></label>
            <span asp-validation-for="ListPrice" disabled class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Price" class="form-control" readonly="true" />
            <label asp-for="Price" class="ms-2"></label>
            <span asp-validation-for="Price" disabled class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Price50" class="form-control" readonly="true" />
            <label asp-for="Price50" class="ms-2"></label>
            <span asp-validation-for="Price50" disabled class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Price100" class="form-control" readonly="true" />
            <label asp-for="Price100" class="ms-2"></label>
            <span asp-validation-for="Price100" disabled class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}